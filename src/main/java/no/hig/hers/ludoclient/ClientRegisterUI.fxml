<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.40" fx:controller="no.hig.hers.ludoclient.ClientRegisterUIController">
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelRegistration" text="Cancel" GridPane.rowIndex="3" />
            <Button fx:id="registerButton" mnemonicParsing="false" onAction="#registerUser" text="Register" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
            <Label text="Username:" />
            <Label text="Password:" GridPane.rowIndex="1" />
            <PasswordField fx:id="passwordTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <PasswordField fx:id="confirmTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Confirm:" GridPane.rowIndex="2" />
            <TextField fx:id="usernameTextField" GridPane.columnIndex="1" />
         </children>
      </GridPane>
   </center>
</BorderPane>
