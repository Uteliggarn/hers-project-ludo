   <bottom>
      <TextField fx:id="chatTextField" onKeyReleased="#sendChat" BorderPane.alignment="CENTER" />
   </bottom>
   <right>
      <ListView fx:id="playerListView" minWidth="-Infinity" prefWidth="150.0" BorderPane.alignment="CENTER" />
