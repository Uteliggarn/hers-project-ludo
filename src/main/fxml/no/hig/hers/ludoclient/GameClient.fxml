<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import javafx.scene.shape.*?>

<BorderPane prefHeight="972.0" prefWidth="1065.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="no.hig.hers.ludoclient.GameClientUIController">
   <left>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <top>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Red Player: Your turn" />
                  <Label text="Blue Player:" />
                  <Label text="Yellow Player:" />
                  <Label text="Blue Player:" />
               </children></VBox>
         </top>
         <bottom>
            <Button mnemonicParsing="false" prefHeight="68.0" prefWidth="118.0" text="Roll dice" textAlignment="CENTER" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Arial Italic" size="18.0" />
               </font></Button>
         </bottom>
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" prefHeight="39.0" prefWidth="273.0" text="Pawn 1" />
                  <Button mnemonicParsing="false" prefHeight="39.0" prefWidth="257.0" text="Pawn 2">
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" prefHeight="39.0" prefWidth="282.0" text="Pawn 3">
                     <VBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" prefHeight="39.0" prefWidth="217.0" text="Pawn 4">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Button>
                  <Button contentDisplay="CENTER" mnemonicParsing="false" prefHeight="39.0" prefWidth="206.0" text="Pass">
                     <VBox.margin>
                        <Insets bottom="20.0" top="30.0" />
                     </VBox.margin>
                  </Button>
                  <Label text="Dice Value:">
                     <padding>
                        <Insets left="50.0" />
                     </padding>
                  </Label>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </VBox>
         </center>
      </BorderPane>
   </left>
   <right>
      <TextArea prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <TextField BorderPane.alignment="CENTER" />
   </bottom>
   <center>
      <ImageView fitHeight="800.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@ludo_board.png" />
         </image>
      </ImageView>
   </center>
</BorderPane>
